{% layout 'theme.guidedog' %}
<div id="guide-dog-products-container">
  <div class="wrapper">
    <div class="grid">
      <div class="grid__item">
        <div id="guide-dog-header">
          <img src="{{ 'guidedog.png' | asset_url }}"/>
          <div id="guide-dog-header-content">
            <h1>Ready to shop blind?</h1>
            <div class="guide-dog-desc">
              <p><span class="guide-dog-name"></span> has created this store to help benefit Guide Dogs for the Blind. To get involved, purchase any of the mystery items below.</p>
            </div>
          </div>
        </div>
        <div class="grid-flex" id="shop-guide-dog-products">

        </div>
      </div>

      {% if settings.gdc_video != '' %}
        <div class="grid__item">
          <div class="video-block-container">
            <div class="video-block" style="max-width: 800px; margin: 0 auto 3rem; background: linear-gradient(rgba(0, 0, 0, 0.55), rgba(0, 0, 0, 0.4)), rgba(0,0,0,0.4) url('{{ settings.gdc_video_image | img_url: '600x' }}')">
              <div class="video-block__content">
                <a class="play-btn" data-fancybox href="https://www.youtube.com/watch?v={{ settings.gdc_video }}" title="play video">
                    {% include 'svg_icon_play',
                     fill: {{settings.shop_blind_color}} %}
                  </a>
              </div>
            </div>
          </div>
        </div>
      {% endif %}
    </div>
  </div>
</div>

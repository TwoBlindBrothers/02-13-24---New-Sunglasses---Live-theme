
<!-- /templates/page.liquid -->
<div class="wrapper">
  <div class="grid">

    <div class="grid__item">

      <div class="braille-header">
        <h1>{{ page.title }}</h1>
        {% comment %}
        <div class="braille-icons">
          <div class="braille-icon">
            <img src="{{ 'braille-mouth.svg' | asset_url }}" class=""/>
          </div>
          <div class="braille-icon">
            <img src="{{ 'braille-arrow.svg' | asset_url }}" class=""/>
          </div>
          <div class="braille-icon">
            <img src="{{ 'braille-finger.svg' | asset_url }}" class=""/>
          </div>
        </div>
        {% endcomment %}
        <div class="braille-page-description">
          {{ page.content }}
        </div>
      </div>

      {% comment %}
        Regular page content goes here.
      {% endcomment %}
      <div class="rte">
        {% section 'braille-translator' %}
      </div>
    </div>

  </div>
</div>

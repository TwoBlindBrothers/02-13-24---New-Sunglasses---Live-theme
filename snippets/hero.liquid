{% capture banner %}{{ block.settings.banner | img_url: '1400x800', crop: 'center' }}{% endcapture %}
{% assign title = block.settings.title %}
{% assign subtitle = block.settings.subtitle %}
{% assign textcolor = block.settings.textcolor %}
{% assign bannervideo = block.settings.bannervideo %}

<div class="hero page-hero lazyload"
    data-bg={{ banner }}
    {{ block.shopify_attributes }}>
    {% if title != blank %}
    <div class="text-center" style="color:{{textcolor}}">
        <span class="h1 text-center">{{title}}</span>
        <span class="h2 text-center">{{subtitle}}</span>
      {% if bannervideo != blank %}
        <a class="play-btn" data-fancybox href="https://www.youtube.com/watch?v={{ bannervideo }}" title="play video">
          {% include 'svg_icon_play',
            fill: {{textcolor}} %}
        </a>

        {% comment %}
        <div class="remodal video" data-remodal-id="{{ bannervideo }}-grid-video" aria-modal="true">
          <button data-remodal-action="close" class="remodal-close"></button>
          <div class="youtube-player" data-id="{{ bannervideo }}"></div>
        </div>
        {% endcomment %}
      {% endif %}
    </div>
    {% endif %}
</div>

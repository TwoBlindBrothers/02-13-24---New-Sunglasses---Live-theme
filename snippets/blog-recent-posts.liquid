<div class="wrapper thinner">
<h1 class="text-center grid--blogposts__title">From the Blind Spot</h1>
<div class="grid grid--blogposts">
{% for article in blogs.the-blind-spot.articles limit:3 %}
    <div class="grid__item large--one-third">
    <a href="{{ article.url }}">
        <div class="blogposts__post clearfix">
         
          <img
            data-sizes="auto"
            data-src="{{ article | img_url: '600x600', crop: 'center' }}"
            data-srcset="
               {{ article | img_url: '600x600', crop: 'center' }} 600w,
               {{ article | img_url: '400x400', crop: 'center' }} 400w"
            class="blogpost__post__img lazyload" 
            alt="{{ article.image.alt }}" />
          
         <div class="blogposts__post__meta">
           
            <span class="h3 blogpost__post__title">
           
            <span>{{ article.title | truncate: 40 }} </span>
            {% include 'svg_arrow-solid',
                classes: 'blogpost__post__arrow large--hide' %}
            
              <time class="visually-hidden" datetime="{{ article.published_at | date: '%Y-%m-%d' }}">{{ article.published_at | date: format: 'month_day_year' }}</time>
              {% for tag in article.tags | limit: 1 %}
                <span class="h4 blogpost__post__tag medium-down--hide">{{ tag }}</span>
             {% endfor %}
         
            <span class="h5 blogpost__post__link medium-down--hide">Read more
            {% include 'svg_arrow-solid',
                classes: 'blogpost__post__arrow' %}
            </span>
            
        </div>
        
    </div>
    </a>
</div>
{% endfor %}
</div>
</div>
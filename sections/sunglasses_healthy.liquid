<section id="healthy" class="healthy-section">
    <div class="text_container">
        <h1>{{ section.settings.claims_title }}</h1>
        <p>{{ section.settings.claims_copy }}</p>
    </div>
    <div class="grid-flex">
        {% for block in section.blocks %}
        <div class="grid__item large--one-third">
            <i> <img src="{{ block.settings.health_icon | img_url: 'x110' }}" alt="{{ block.settings.health_icon.alt }}"  aria-hidden="true"/> </i>
            <h2>{{ block.settings.health_title }}</h2>
            <p>{{ block.settings.health_text }}</p>
        </div>
        {% endfor %}
    </div>
</section>

{% schema %}
  {
    "name": "Health Claims",
    "settings": [
        { 
            "type": "text",
            "id": "claims_title",
            "label": "Section title"
        },
        { 
            "type": "text",
            "id": "claims_copy",
            "label": "Section subcopy"
        }
    ],
    "blocks": [
        {
        "type": "iconset",
        "name": "Health claims",
        "settings": [
            {
                "type": "text",
                "id": "health_title",
                "label": "Health claim"
            },
             {
                "type": "textarea",
                "id": "health_text",
                "label": "Supporting copy"
            },
            {
                "type": "image_picker",
                "id": "health_icon",
                "label": "Icon image"
            }
        ]
       }
    ]
}
{% endschema %}
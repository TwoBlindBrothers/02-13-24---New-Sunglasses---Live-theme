<div class="page-banner" style="background-color: {{ section.settings.bg_color | default: '#f1d93d'}}">
    <div class="flex flex-wrap justify-content-center align-items-center">
        {% if section.settings.text %}
            <h2 style="color: {{ section.settings.text_color | default: '#171717' }}">{{ section.settings.text }}</h2>
        {% endif %}
        {% if section.settings.button_url %}
            <div>
                <a class="btn" style="background-color: {{ section.settings.text_color | default: '#171717' }}" href="{{ section.settings.button_url }}">{{ section.settings.button_text | default: 'Shop Blind' }}</a>
            </div>
        {% endif %}
    </div>
</div>

{% schema %}
    {
        "name": "Page Banner",
        "settings": [
            {
                "type": "text",
                "id": "text",
                "label": "Text"
            },
            {
                "type": "color",
                "id": "bg_color",
                "label": "Background Color"
            },
            {
                "type": "color",
                "id": "text_color",
                "label": "Text Color"
            },
            {
                "type": "text",
                "id": "button_text",
                "label": "Button Text"
            },
            {
                "type": "url",
                "id": "button_url",
                "label": "Button URL"
            }
        ],
        "presets": [
            {
                "name": "Page Banner",
                "category": "Content"
            }
        ]
    }
{% endschema %}
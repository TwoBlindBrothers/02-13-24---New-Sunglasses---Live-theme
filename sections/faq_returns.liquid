   {% for block in section.blocks %}
    {% case block.type %}
         {% when 'returns' %}
         <dl class="contact__sections__block" {{ block.shopify_attributes }}>
            <button class="contact_toggle">{% include 'svg_icon_plus'  %}</button>
             <dt>{{ block.settings.returns_q }}</dt>
             <dd>{{ block.settings.returns_a }}</dd>
         </dl>
     {% endcase %}
  {% endfor %}
         

{% schema %}
  {
    "blocks": [
        {
        "type": "returns",
        "name": "Returns FAQ",
        "settings": [
            {
                "type": "text",
                "id": "returns_q",
                "label": "Returns question"
            },
            {
                "type": "richtext",
                "id": "returns_a",
                "label": "Returns answer"
            }
        ]
       }
    ]
  }
{% endschema %}
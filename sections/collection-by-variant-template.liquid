<div class="hero collection{% unless collection.description %} no-desc{% endunless %}" {% if collection.image %}style="background-image: url({{ collection.image | img_url: '1880x' }});"{% endif %}>
  <div class="wrapper center-text">
    <div class="hero-text">
			{% if collection.metafields.custom-title != blank %}
				<h1 class="hero-text-container">
					{% for field in collection.metafields.custom-title %}
						<span class="hero-text-line">
							{{ field | last }}
						</span>
					{% endfor %}
				</h1>
      {% elsif collection.handle == 'mens' %}
          {% include 'svg_copy_hello-mens-collection' %}
      {% elsif collection.handle == 'womens' %}
          {% include 'svg_copy_hello-womens-collection' %}
      {% else %}
          <h1 class="slab"><span class="slabtext">{{ collection.title }}</span></h1>
      {% endif %}

      <div class="hero-description medium-down--hide">
          <p>{{ collection.description }}</p>
      </div>
    </div>
  </div>
	{% if settings.easter_enabled and settings.hunt_type == '2bb' %}
		{% if collection.url contains 'sock-collection' %}
			<a class="easter-link easter-link-2bb socks-egg" href="{{ settings.easter_url }}">
				<img src="{{ '2BB-sticker-bryan.png' | file_img_url: '100x' }}" class="easter-egg-2bb"/>
			</a>
		{% endif %}
		{% if collection.url contains 'feel-the-difference' %}
			<a class="easter-link easter-link-2bb ftd-egg" href="{{ settings.easter_url }}">
				<img src="{{ '2BB-sticker-brad.png' | file_img_url: '100x' }}" class="easter-egg-2bb"/>
			</a>
		{% endif %}
	{% endif %}
</div>

{% if collection.description != empty %}
    <div class="hero-description large--hide">
        <p>{{ collection.description }}</p>
    </div>
{% endif %}

{% include "collection-nav" %}

{% paginate collection.products by products_per_page %}
<div class="wide" style="background-color: {{ collection_background_color }};">
  <div class="wrapper">
    {% render 'collections-filter' %}
    <div class="grid-flex products-grid" id="collection-container">

      {% for product in collection.products %}

        {% include "product-grid-item", product: product, collection_is_able_to_show_button: collection_is_able_to_show_button, collection_background_color: collection_background_color, collection_product_border_color: collection_product_border_color %}

      {% endfor %}

    </div>

    {% if paginate.pages > 1 %}
      <hr>
      <div class="pagination">
        {{ paginate | default_pagination | replace: '&laquo; Previous', '&larr;' | replace: 'Next &raquo;', '&rarr;' }}
      </div>
    {% endif %}
  </div>
</div>

{% endpaginate %}


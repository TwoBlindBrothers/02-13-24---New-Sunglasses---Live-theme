   {% for block in section.blocks %}
    {% case block.type %}
         {% when 'payments' %}
         <dl class="contact__sections__block" {{ block.shopify_attributes }}>
            <button class="contact_toggle">{% include 'svg_icon_plus'  %}</button>
             <dt>{{ block.settings.payments_q }}</dt>
             <dd>{{ block.settings.payments_a }}</dd>
         </dl>
     {% endcase %}
  {% endfor %}
         

{% schema %}
  {
    "blocks": [
        {
        "type": "payments",
        "name": "Payments FAQ",
        "settings": [
            {
                "type": "text",
                "id": "payments_q",
                "label": "Payments question"
            },
            {
                "type": "richtext",
                "id": "payments_a",
                "label": "Payments answer"
            }
        ]
       }
    ]
  }
{% endschema %}
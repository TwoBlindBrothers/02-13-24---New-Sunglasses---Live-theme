<div class="exclusive-qty">
  <div class="exclusive-qty-wrapper">
    <div class="exclusive-qty-header">
      {% if section.settings.title != blank %}
        <h2>{{ section.settings.title }}</h2>
      {% endif %}

    </div>
    <div class="exclusive-qty-row">
      {% for block in section.blocks %}
        <div class="exclusive-qty-item">
          {% if block.settings.img != blank %}
            <img src="{{ block.settings.img | img_url: 'master' }}" alt="">
          {% endif %}
          {% if block.settings.title != blank %}
            <h3>{{ block.settings.title }}</h3>
          {% endif %}
          {% if block.settings.content != blank %}
            {{ block.settings.content }}
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</div>
{% schema %}
{
  "name": "Exclusive Quality",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading"
    }
  ],
  "blocks": [
    {
      "name": "block",
      "type": "block",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "richtext",
          "id": "content",
          "label": "Content"
        },
        {
          "type": "image_picker",
          "id": "img",
          "label": "Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Exclusive Quality"
    }
  ]
}
{% endschema %}


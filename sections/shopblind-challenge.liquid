{% if section.blocks.size > 0 %}
  <div class="shopblind-challenge contaier" style="background-color: {{ section.settings.bg_color }}">
    <div class="challenge-title">
      <h3 style="color: {{ section.settings.heading_color }}">#{{ section.settings.heading }}</h3>
    </div>

    <ul class="inline-list social-icons">
      {% for block in section.blocks %}
        {% if block.settings.icon_svg %}
          {%- assign social_icon = block.settings.icon | file_url -%}
          {% if social_icon != empty %}
            <li>
              <a
                class="social-icon"
                href="{{ block.settings.url }}"
                target="_blank"
                rel="noopener"
                title="{{ shop.name }} on {{ block.settings.title }}"
                style="color: {{ block.settings.title_color }}">
                {% comment %}<img class="lazy" src="{{- social_icon -}}" alt="{{- block.settings.icon.alt | escape -}}" width="auto" height="18">{% endcomment %}
                {{ block.settings.icon_svg }}
              </a>
            </li>
          {% endif %}
        {% endif %}
      {% endfor %}
    </ul>
  </div>
{% endif %}

{% schema %}
  {
    "name": "Shop Blind Challenge",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      }, {
        "type": "color",
        "id": "bg_color",
        "label": "Background color"
      }, {
        "type": "color",
        "id": "heading_color",
        "label": "Heading text color"
      }
    ],
    "blocks": [
      {
        "type": "social",
        "name": "Social",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Social Media Platform",
            "info": "ie. Twitter"
          }, {
            "type": "color",
            "id": "title_color",
            "label": "Title color"
          }, {
            "type": "html",
            "id": "icon_svg",
            "label": "Icon svg",
            "info": "svg content"
          }, {
            "type": "url",
            "id": "url",
            "label": "Social URL"
          }
        ]
      }
    ],
    "presets": [
        {
          "name": "Shop Blind Challenge",
          "category": "Shop Blind"
        }
    ]
  }
{% endschema %}
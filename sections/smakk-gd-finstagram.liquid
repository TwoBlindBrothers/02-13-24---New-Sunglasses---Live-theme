<div class="gd_cols gd_cols--4 gd_cols--offset gd_cols--insta">
  <div class="wrapper text-center"> 
    {%- if section.settings.title != blank-%}
     <h2 class="section-title text-center">{{ section.settings.title }}</h2>
    {%- endif -%}
    {%- if section.settings.handle != blank -%}
      <a href="https://instagram.com/{{ section.settings.handle }}" class="btn--text">@{{ section.settings.handle }}</a>
    {%- endif -%}
  </div>
  <ul class="gd_cols__grid">
    {%- for block in section.blocks -%}
      <li class="gd_cols__col">
        {%- if block.settings.link != blank -%}
          <a href="{{ block.settings.link }}">
            {% render 'image', image: block.settings.image, aspect: 1 %}
          </a>
        {%- else -%}
          <div>
            {% render 'image', image: block.settings.image, aspect: 1 %}
          </div>
        {%- endif -%}
      </li>
    {%- endfor -%}
  </ul>
</div>

{% schema %}
{
  "name": "Guide Dog Social",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "text",
      "id": "handle",
      "label": "Instagram handle"
    }
  ],
  "blocks": [
    {
      "type": "post",
      "name": "Post",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Optional Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "category": "Social",
      "name":"Guide Dog Social"
    }
  ]
}
{% endschema %}

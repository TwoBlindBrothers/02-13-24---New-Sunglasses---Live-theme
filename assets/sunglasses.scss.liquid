//sticky nav
.sunglasses_stickynav {
    position: sticky;
    position: -webkit-sticky;
    top: 99px;
    z-index: 999;
    width: 100%;
    @media (max-width: 768px) {
      top: 73px;
    }
    .medium-down--hide {
        @media (max-width: 768px) {
            display: none !important;
        }
    }
    .medium-up--hide {
        @media (min-width: 768px) {
            display: none !important;
        }
    }
    nav {
        border: 4px solid #0c0c0b;
        background-color: white;
        display: flex;
        flex-direction: row;
        position: relative;
        border-left-width: 0;
        border-right-width: 0;
        ul {
            display: flex;
            flex-direction: row;
            justify-content: space-between;
            align-items: center;
            width: 100%;
            max-width: 1200px;
            margin: 0 auto;
            padding: 12px;
            list-style: none;
            text-transform: uppercase;
            font-weight: 600;
            text-align: center;
            font-size: 12px;
            letter-spacing: 1px;
            overflow: hidden;
           // pointer-events: none;
            @media (max-width: 768px) {
                width: calc(100% + 8px);
                position: absolute;
                left: -4px;
                top: 100%;
                flex-direction: column;
                border: 4px solid #0c0c0b;
                background-color: white;
                display: block;
                transform: translateY(-100%);
                opacity: 0;
                transition: all 0.2s;
                z-index: -99;
            }
            li {
                margin-bottom: 0;
            }
            li a {
                padding: 8px;
                display: block;
                text-align: center;
                &.btn {
                    margin: 0 16px;
                }
            }
        }
        .menu_select {
            flex: 1 1 100%;
            display: flex;
            justify-content: space-around;
            align-items: center;
            font-weight: 500;
            cursor: pointer;
            background: white;
            .chevron {
                transition: all 0.2s;
                height: 1.25rem;
                width: 1.25rem;
                transform: rotate(-90deg);
                svg {
                    width: 100%;
                    height: 100%;
                }
            }
        }
        &.open {
            ul {
                @media (max-width: 768px) {
                    pointer-events: all;
                    opacity: 1;
                    transform: translateY(0);
                }
            }
            .menu_select .chevron{
                transform: rotate(0deg);
                color: rgba(0, 0, 0, 0.5);
                svg path {
                    fill: #828282;
                }
            }
        }
    }
}


@keyframes rotate{
    0% {
        transform: rotate(0deg);
    }
    10% {
        transform: rotate(0deg);
    }
    40% {
        transform: rotate(180deg);
    }
    60% {
        transform: rotate(180deg);
    }
    90% {
        transform: rotate(360deg);
    }
    100% {
        transform: rotate(360deg);
    }
}

@keyframes break--left{
    0% {
        transform: rotate(25deg) translate(4px, 10px);
    }
    25% {
        transform: rotate(25deg) translate(4px, 10px);
    }
    100% {
        transform: rotate(0deg) translate(0px, 6px);
    }
}

@keyframes break--right{
    0% {
        transform: rotate(-25deg) translate(-4px, 10px);
    }
    25% {
        transform: rotate(-25deg) translate(-4px, 10px);
    }
    100% {
        transform: rotate(0deg) translate(0px, 6px);
    }
}


// interactive section
.sunglasses_about {
    min-height: 50vh;
    width: 100%;
    text-align: center;
    padding: 64px;
    position: relative;
    @media (max-width: 768px) {
        padding: 32px;
        min-height: 0;
    }
    &.sunglasses_about--interactive {
        padding: 80px 80px 0 80px;
        @media (max-width: 568px) {
            padding: 20px 10px
        }
    }
    &.sunglasses_about--alt_bg {
        background-color: #231F20;
        color: #ffffff;
        h2 {
            color: #F0D83D;
            margin: 24px auto;
        }
        h1 {
            margin: 64px auto;
            font-size: 2.5em;
        }
    }
    .text_container {
        max-width: 800px;
        margin: 48px auto;
        h2, h3 {
            text-align: center;
        }
    }
    .interactive_grid {
        min-height: 55vh;
        width: 100%;
        display: grid;
        grid-template-columns: repeat(8, minmax(0px, 1fr));
        grid-template-rows: 1fr;
        grid-gap: 1rem;
        margin: 80px auto 0;
        position: relative;
        overflow: hidden;
       @media (min-width: 1024px) {
          grid-template-rows:1fr 1fr 1fr 1fr
      }
        .interactive_grid__item {
            text-align: left;
            grid-row: span 1;
            grid-column: span 2;
            opacity: 1;
            cursor: pointer;
            position: relative;
            z-index: 1;
            &:nth-of-type(3n+1) {
                grid-row-start: 2;
            }
             &:nth-of-type(3n+2) {
                grid-row-start: 3;
            }
             &:nth-of-type(3n+3) {
                grid-row-start: 4;
            }
            h3 {
                text-transform: uppercase;
                font-size: 18px;
                position: relative;
                opacity: 0.7;
                &::after {
                    content: '';
                    position: absolute;
                    left: 0;
                    bottom: -4px;
                    width: 100%;
                    height: 3px;
                    background-color: #F0D83D;
                    opacity: 0.5;
                }
            }
            p {
                font-size: 1rem;
                line-height: 1.5;
                letter-spacing: normal;
                font-weight: 300;
                opacity: 0.9;
            }
            &.is-active {
                h3 {
                    opacity: 1;
                    &::after {
                        opacity: 1;
                    }
                }
                p {
                    opacity: 1;
                }
            }
        }
        .interactive_grid__image {
            grid-row: 1 / 5;
            grid-column: 3 / 7;
            img {
                position: absolute;
                bottom: 0;
                left: 50%;
                transform: translateX(-50%);
                vertical-align: bottom;
                height: auto;
                max-height: 100%;
                opacity: 0;
                &.is-active {
                    opacity: 1;
                }
            }
        }
    }
}


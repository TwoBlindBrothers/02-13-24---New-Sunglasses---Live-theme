.uppercase {
  text-transform: uppercase;
}
.upsell-2bb {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background-color: rgba(0,0,0,.8);
  z-index: 1001;
  display: none;
  .upsell-product-element {
    display: none;
  }
  .upsell-popup-container {
    display: flex;
    justify-content: center;
    align-items: center;
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    .upsell-popup {
      width: 90%;
      max-height: 90vh;
      display: block;
      background-color: white;
      padding: 2.5rem 1rem 1rem;
      position: relative;
      overflow: auto;
      @media (min-width: 768px) {
        width: 850px;
        padding: 2rem;
      }
      .close-popup {
        width: 20px;
        height: auto;
        cursor: pointer;
        position: absolute;
        left: 1rem;
        top: 1rem;
        img {
          width: 100%;
          height: auto;
        }
        @media (min-width: 768px) {
          width: 15px;
        }
      }
      h2 {
        text-align: center;
        color: black;
        margin-bottom: 1.5rem;
        font-size: 1.5rem;
        line-height: 1.25;
        letter-spacing: normal;
        text-transform: none;
        font-weight: 600;
        width: 80%;
        margin: 0 auto 1.5rem;
        @media (min-width: 768px) {
          font-size: 2rem;
          width: 100%;
        }
      }
      .upsell-content {
        position: relative;
        @media (min-width: 768px) {
          display: flex;
        }
        .upsell-images {
          width: 100%;
          height: auto;
          position: relative;
          display: flex;
          margin: 0 -.5rem 1.5rem 0;
          .upsell-image {
            padding: 0 .5rem;
            width: 50%;
            @media (min-width: 768px) {
              width: 100%;
              padding: 0;
              flex: 1;
            }
            img {
              width: 100%;
              height: auto;
              display: block;
              z-index: 2;
              position: relative;
            }
          }
          @media (min-width: 768px) {
            display: block;
            margin: 0 0 1rem;
          }
          @media (min-width: 768px) {
            width: 40%;
            margin-bottom: 0;
          }
        }
        .upsell-description {
          width: 100%;
          color: black;
          a {
            color: black;
            &:hover, &:visited, &:focus {
              color: black;
            }
          }
          @media (min-width: 768px) {
            width: 60%;
            padding: 0 2rem 0;
          }
          .details-header {
            h3 {
              font-weight: 700;
              font-size: 1rem;
              margin-bottom: 1.5rem;
            }
            p {
              margin-bottom: .75rem;
            }
          }
          .details-toggle {
            text-transform: uppercase;
            padding: .25rem .25rem 1rem;
            font-weight: 600;
            display: block;
            @media (min-width: 768px) {
              display: none;
            }
          }
          .details-content {
            p {
              font-size: 1rem;
              margin-bottom: .75rem;
            }
            ul {
              display: none;
              @media (min-width: 768px) {
                display: block;
              }
              li {
                font-size: .9rem;
                line-height: 1.2;
                font-weight: 400;
                margin-bottom: .5rem;
              }
            }
          }
          .upsell-footer {
            padding-top: 1rem;
            // padding: 1rem 0;
            // display: flex;
            // justify-content: space-between;
            // align-items: center;
          }
          .upsell-selector {
            text-transform: uppercase;
            font-weight: 700;
            label {
              cursor: pointer;
              padding-left: 25px;
              position: relative;
              margin-bottom: .25rem;
              display: flex;
              span {
                position: absolute;
                top: 50%;
                left: 0;
                transform: translateY(-50%);
                height: 20px;
                width: 20px;
                border-radius: 50%;
                background-color: white;
                border: 2px solid black;
                pointer-events: none;
              }
              input {
                position: absolute;
                opacity: 0;
                cursor: pointer;
                height: 100%;
                width: 100%;
                left: 0;
                top: 0;
                &:checked~span:after {
                  content: '';
                  position: absolute;
                  top: 2px;
                  left: 2px;
                  width: 12px;
                  height: 12px;
                  background-color: black;
                  border-radius: 50%;
                }
              }
            }
          }
          .buy-buttons {
            margin: 1rem 0 .5rem;
            flex: 1;
            position: relative;
            border: 2px solid black;
            .add-to-cart {
              font-size: .8rem;
              padding: .5rem 1rem;
              width: 100%;
              background-color: white!important;
              &:focus, &:visited {
                background-color: white;
              }
            }
          }
          .no-thanks {
            margin-top: .5rem;
            background-color: white;
            color: black;
            font-size: .8rem;
            padding: .5rem 1rem;
            width: 100%;
            text-align: center;
            border: 2px solid black;
            @media (max-width: 768px) {
              font-size: .65rem;
            }
          }
          .disclaimer {
            margin-top: 1rem;
            span {
              font-size: .9rem;
            }
          }
        }
      }
      #popup-loader {
        position: absolute;
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
        pointer-events: none;
        background-color: rgba(255,255,255,.95);
        opacity: 0;
        transition: opacity .2s ease-in;
        z-index: 2;
        &.active {
          pointer-events: auto;
          opacity: 1;
        }
        #popup-loader__wrapper {
          position: absolute;
          width: 100%;
          height: 100%;
          top: 0;
          left: 0;
          display: flex;
          justify-content: center;
          align-items: center;
        }
        #popup-loader__content {
          display: flex;
          justify-content: center;
          align-items: center;
          flex-direction: column;
          color: black;
          p {
            color: black;
            font-weight: 600;
          }
          #twobbloader.loading {
            position: relative;
            background-color: transparent;
            width: 100%;
            height: 20px;
            .blobs {
              height: 100%;
            }
          }
        }
      }
    }
  }
  &.active {
    display: block;
    .upsell-popup-container {
      .upsell-popup {
        animation-duration: 0.5s;
        animation-name: bounceIn;
      }
    }
  }
}

@keyframes bounceIn {
  from,
  60%,
  to {
    -webkit-animation-timing-function: cubic-bezier(0.215, 0.61, 0.355, 1);
    animation-timing-function: cubic-bezier(0.215, 0.61, 0.355, 1);
  }

  0% {
    opacity: 0;
    -webkit-transform: scale3d(0.3, 0.3, 0.3);
    transform: scale3d(0.3, 0.3, 0.3);
  }

  60% {
    opacity: 1;
    -webkit-transform: scale3d(1.1, 1.1, 1.1);
    transform: scale3d(1.1, 1.1, 1.1);
  }

  to {
    opacity: 1;
    -webkit-transform: scale3d(1, 1, 1);
    transform: scale3d(1, 1, 1);
  }
}

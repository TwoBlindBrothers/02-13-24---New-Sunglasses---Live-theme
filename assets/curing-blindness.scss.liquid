//Blinking eyeballs

.eyeball {
  .cls-1,.cls-5{fill:none;}.cls-1{stroke:#231f20;stroke-miterlimit:10;stroke-width:9.21px;}.cls-2{fill:#f0d83d;}.cls-3{fill:#231f20;}.cls-4{fill:#fff;}
}

#eye {
  animation: blink 3.2s infinite;
}
#lid {
  animation: squeeze 3.2s infinite;
}

@keyframes blink {
  90% {
    transform: none;
    animation-timing-function: ease-in;
  }
  93% {
    transform: translateY(30px) scaleY(0)
  }
  100% {
    animation-timing-function: ease-out;
  }
}
@keyframes squeeze {
  90% {
    transform: none;
    animation-timing-function: ease-in;
  }
  93% {
    transform: translateY(6px) scaleY(0.6)
  }
  100% {
    animation-timing-function: ease-out;
  }
}

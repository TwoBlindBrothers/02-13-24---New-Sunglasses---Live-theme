$headerFontStack: "canada-type-gibson", 'HelveticaNeue', 'Helvetica Neue', Helvetica, Arial, sans-serif;
$black: {{ settings.color_primary }};

body#recharge-novum #main-content #recharge-te {
  z-index: 9!important;
  h1, h2, h3, h4, h5, h6, .rc_order_title, .rc_btn--secondary, .rc_btn, .te-modal-title {
    font-family: $headerFontStack!important;
    text-transform: uppercase!important;
    font-weight: 900!important;
  }
  p {
    font-family: $headerFontStack!important;
  }
  .rc_btn--secondary {
    background-color: $black!important;
    color: white!important;
  }
  #rc_te-template-wrapper {
    #rc_manage_subscription_container {
      .upsells--wrapper {
        display: none!important;
      }
      .edit_subscription_info--wrapper {
        width: 80%!important;
        flex-basis: 80%!important;
        margin: 0 auto!important;
      }
    }
    .title-bold,
    .rc_subscription_next_charge_date .title-bold,
    .rc_subscription_next_charge_date .title-bold,
    .rc_add_product .rc_btn, .rc_add_product .js-add-product-btn {
      font-weight: 900!important;
      border-radius: 0!important;
    }
  }
}

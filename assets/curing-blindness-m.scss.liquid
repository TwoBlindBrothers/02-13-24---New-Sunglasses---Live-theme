//MIXINS

@mixin flexbox($direction:row) {
  display: -webkit-box;
  display: -webkit-flex;
  display: -moz-flex;
  display: -ms-flexbox;
  display: flex;
    -webkit-flex-direction: $direction;
  -moz-flex-direction: $direction;
  -ms-flex-direction: $direction;
  flex-direction: $direction;
}
@mixin border($width: 5px, $color: {{ settings.color_borders }}, $radius:0) {
    border: 6px solid $color;
    border-radius: $radius;
}
@mixin outline($color: {{ settings.color_borders }}) {
    outline: 5px solid $color;
    outline-offset: -30px
}
    
@mixin section-height($height) {
    height: $height
}
@mixin centered() {
  margin: 0 auto;
  display: block
}

